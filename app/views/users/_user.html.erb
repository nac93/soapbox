<div class="hero-unit">
	<div class="container-fluid">
		<div class="row-fluid center">

			<div class="span10 offset2" align="center">
				<%= gravatar_for(@user, size: 100) %>
			</div>

			<div class="span12 offset0">
				<h3><%= @user.username %></h3>
			</div>

			<div class="span12 offset0" align="right">
<br>
<i>
				Questions Posted: <%= @user.questions.length %><br>
				Polls Voted Upon: <%= @user.votes.length %><br>
				Comments Made: <%= @user.comments.length %><br>
				Comments Rated: <%= @user.likes.length + @user.dislikes.length %>
</i>
			</div>

		</div>
	</div>
</div>
